{
  "plugins": {
    "metalsmith-ignore": "node_modules/**/*",
    "metalsmith-markdown": {},
    "metalsmith-sass": {
      "outputStyle": "expanded"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "src/_layouts",
      "default": "default.html",
      "pattern": ["!*.css"]
    }
  }
}